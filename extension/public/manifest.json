{
  "manifest_version": 3,
  "name": "X Bookmarks Intelligence",
  "description": "Transform your Twitter/X bookmarks into structured knowledge with AI-powered clustering and insights",
  "version": "0.1.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*"
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "X Bookmarks Intelligence"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://x.com/i/bookmarks*",
        "https://twitter.com/i/bookmarks*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["galaxy/index.html", "galaxy/index.js", "chunks/*", "popup/globals.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
